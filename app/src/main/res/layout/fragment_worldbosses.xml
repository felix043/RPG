<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorldBossFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/framelayout_worldboss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/wb_phantomspider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_boss_phantomspider"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:stateListAnimator="@null"
                    android:text="Phantom Spider"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/phantomspider_artistname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="48dp"
                    android:text="Creator: BluePhantomPanda"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="11.5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wb_mumie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_boss_mumie"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:stateListAnimator="@null"
                    android:text="Mumie"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/mumie_artistname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="48dp"
                    android:text="Creator: Pastaway"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="11.5dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>